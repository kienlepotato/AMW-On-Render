  <!-- JavaScript -->
  <script>
    document.querySelector('.hamburger-menu').addEventListener('click', function () {
      const navRight = document.querySelector('.nav-right');
      navRight.classList.toggle('show');
    });

    document.addEventListener("DOMContentLoaded", function () {
      const publicHolidays = ["2025-01-01", "2025-12-25"];
      flatpickr("#date", {
        dateFormat: "Y-m-d",
        disable: publicHolidays,
        minDate: "today",
        locale: { firstDayOfWeek: 1 }
      });

      const startTime = 8 * 60;
      const endTime = 17 * 60;
      const timeIncrement = 30;
      const bookedTimes = ["09:00", "10:00", "13:30"];
      const timeSelect = document.getElementById("time");

      function populateTimeSlots() {
        timeSelect.innerHTML = '<option value="" disabled selected>Select a time</option>';
        for (let minutes = startTime; minutes <= endTime; minutes += timeIncrement) {
          const hours = Math.floor(minutes / 60);
          const mins = minutes % 60;
          const time = `${hours.toString().padStart(2, "0")}:${mins.toString().padStart(2, "0")}`;
          if (!bookedTimes.includes(time)) {
            const option = document.createElement("option");
            option.value = time;
            option.textContent = time;
            timeSelect.appendChild(option);
          }
        }
      }

      populateTimeSlots();

      const repairCheckbox = document.getElementById("repair-checkbox");
      const serviceCheckbox = document.getElementById("service-checkbox");
      const cleaningCheckbox = document.getElementById("cleaning-checkbox");
      const repairTypesGroup = document.getElementById("repair-types-group");
      const serviceTypesGroup = document.getElementById("service-types-group");
      const specificServiceTypesGroup = document.getElementById("specific-service-types-group");
      const repairOtherGroup = document.getElementById("repair-other-group");
      const specificOtherGroup = document.getElementById("specific-other-group");
      const repairOtherRadio = document.getElementById("repair-other-radio");
      const specificOtherRadio = document.getElementById("specific-other-radio");
      const cleaningTypesGroup = document.getElementById("cleaning-types-group");

      repairCheckbox.addEventListener("change", function () {
        repairTypesGroup.style.display = this.checked ? "block" : "none";
        if (!this.checked) repairOtherGroup.style.display = "none";
      });

      serviceCheckbox.addEventListener("change", function () {
        serviceTypesGroup.style.display = this.checked ? "block" : "none";
        if (!this.checked) {
          specificServiceTypesGroup.style.display = "none";
          specificOtherGroup.style.display = "none";
        }
      });

 // Cleaning checkbox logic (new logic for cleaning types)
  cleaningCheckbox.addEventListener("change", function () {
    if (this.checked) {
      // Show the cleaning type options when "Cleaning" is selected
      cleaningTypesGroup.style.display = "block";
      
      // Hide other fields related to repair and service when cleaning is selected
    //   repairTypesGroup.style.display = "none";
    //   serviceTypesGroup.style.display = "none";
    //   specificServiceTypesGroup.style.display = "none";
    //   repairOtherGroup.style.display = "none";
    //   specificOtherGroup.style.display = "none";
    } else {
      // Hide the cleaning type options when "Cleaning" is unchecked
      cleaningTypesGroup.style.display = "none";
    }
  });

      if (repairOtherRadio) {
        repairOtherRadio.addEventListener("change", function () {
          repairOtherGroup.style.display = this.checked ? "block" : "none";
        });
      }

      if (specificOtherRadio) {
        specificOtherRadio.addEventListener("change", function () {
          specificOtherGroup.style.display = this.checked ? "block" : "none";
        });
      }

      const serviceTypeRadios = document.querySelectorAll('input[name="servicingType"]');
      serviceTypeRadios.forEach((radio) => {
        radio.addEventListener("change", function () {
          if (this.value === "specific") {
            specificServiceTypesGroup.style.display = "block";
          } else {
            specificServiceTypesGroup.style.display = "none";
            specificOtherGroup.style.display = "none";
          }
        });
      });
    });
  </script>
