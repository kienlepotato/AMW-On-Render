  <main>
    <section class="appointment-section">
      <h1>New appointment</h1>
<form class="appointment-form" action="/customerbooking" method="POST">
  <div class="form-group">
    <label for="firstName">First name *</label>
    <input type="text" id="firstName" name="firstName" required value="<%= user?.firstname || '' %>" readonly required />
  </div>
  <div class="form-group">
    <label for="lastName">Last name *</label>
    <input type="text" id="lastName" name="lastName" required value="<%= user?.lastname || '' %>" readonly required />
  </div>
  <div class="form-group">
    <label for="email">Email address *</label>
    <input type="email" id="email" name="email" required value="<%= user?.email || '' %>" readonly required />
  </div>
  <div class="form-group">
    <label for="phoneNumber">Phone number *</label>
    <input type="tel" id="phoneNumber" name="phoneNumber" required value="<%= user?.phonenumber || '' %>" readonly required />
  </div>
        <div class="form-group">
          <label for="registrationNumber">Registration number *</label>
          <input type="text" id="registrationNumber" name="registration" required />
        </div>
        <div class="form-group">
          <label for="odometer">Odometer (kms) *</label>
          <input type="number" id="odometer" name="odometer" min="0" required />
        </div>
        <div class="form-group">
          <label for="logbookInterval">Logbook Interval *</label>
          <input type="text" id="logbookInterval" name="logbookInterval" required />
        </div>
        <div class="form-group">
          <label for="location">AMW Location *</label>
          <select id="location" name="location" required>
            <option value="" disabled selected>Please select an AMW service workshop</option>
            <option value="Belconnen">Belconnen</option>
            <option value="Gungahlin">Gungahlin</option>
            <option value="City">City</option>
            <option value="Woden">Woden</option>
          </select>
        </div>

        <div class="form-group">
          <label>Appointment type *</label>
          <div class="checkbox-group">
            <label><input type="checkbox" name="appointmentTypeR" value="repair" id="repair-checkbox" /> Repair</label>
            <label><input type="checkbox" name="appointmentTypeS" value="service" id="service-checkbox" /> Service</label>
            <label><input type="checkbox" name="appointmentTypeC" value="cleaning" id="cleaning-checkbox" /> Cleaning</label>
          </div>
        </div>
        
        <div class="form-group" id="cleaning-types-group" style="display: none;">
  <label>Cleaning Type *</label>
  <div class="radio-group">
    <label><input type="radio" name="cleanType" value="interior" /> Interior Clean</label>
    <label><input type="radio" name="cleanType" value="exterior" /> Exterior Clean</label>
    <label><input type="radio" name="cleanType" value="full" /> Full Clean</label>
  </div>
</div>

        
        <div class="form-group" id="repair-types-group" style="display: none;">
          <label>Repair type *</label>
          <div class="radio-group">
            <label><input type="radio" name="repairType" value="major" /> Major</label>
            <label><input type="radio" name="repairType" value="minor" /> Minor</label>
            <label><input type="radio" name="repairType" value="other" id="repair-other-radio" /> Other</label>
          </div>
        </div>
        <div class="form-group" id="repair-other-group" style="display: none;">
          <label for="repairOther">Please Specify Repair *</label>
          <textarea id="repairOther" name="specificRepairs"></textarea>
        </div>

        <div class="form-group" id="service-types-group" style="display: none;">
          <label>Service type *</label>
          <div class="radio-group">
            <label><input type="radio" name="servicingType" value="general" /> General</label>
            <label><input type="radio" name="servicingType" value="essential" /> Essential</label>
            <label><input type="radio" name="servicingType" value="specific" id="specific-service-radio" /> Specific</label>
          </div>
        </div>

        <div class="form-group" id="specific-service-types-group" style="display: none;">
          <label>Specific service type *</label>
          <div class="radio-group">
            <label><input type="radio" name="specificDetails" value="oil-filter" /> Oil and Filter</label>
            <label><input type="radio" name="specificDetails" value="brake-clutch" /> Brake and Clutch</label>
            <label><input type="radio" name="specificDetails" value="transmission" /> Transmission</label>
            <label><input type="radio" name="specificDetails" value="ac" /> A/C</label>
            <label><input type="radio" name="specificDetails" value="electrical" /> Electrical</label>
            <label><input type="radio" name="specificDetails" value="other" id="specific-other-radio" /> Other</label>
          </div>
        </div>

        <div class="form-group" id="specific-other-group" style="display: none;">
          <label for="specificOther">Please Specify Servicing*</label>
          <textarea id="specificOther" name="specificOther"></textarea>
        </div>

        <!-- <div class="form-group">
          <label for="details">Extra Comments (Optional)</label>
          <textarea id="details" name="details"></textarea>
        </div> -->

        <div class="form-group">
          <label for="date">Pick a date *</label>
          <input type="text" id="date" name="appointmentDate" required />
        </div>

        <div class="form-group">
          <label for="time">Pick a time *</label>
          <select id="time" name="appointmentTime" required>
            <option value="" disabled selected>Select a time</option>
          </select>
        </div>

        <button type="submit" class="book-button">Book Appointment</button>
      </form>
